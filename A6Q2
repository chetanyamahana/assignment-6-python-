
def check_pallindrome():
    str1=input("Enter the string you want to check for pallindrome\n")
    rev="".join(reversed(str1))                                         #reversing the inputted string
    if str1==rev:                                                       #checking equality
        print("Yes\n")
    else:
        print("No\n")

while True:
    check_pallindrome()
